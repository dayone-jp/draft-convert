{
  "name": "draft-convert",
  "version": "2.2.0",
  "description": "Extensibly serialize & deserialize Draft.js ContentState",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "repository": "git@github.com:dayone-jp/draft-convert.git",
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:umd",
    "build:cjs": "cross-env BABEL_ENV=cjs babel src --out-dir lib",
    "build:esm": "cross-env BABEL_ENV=esm babel src --out-dir esm",
    "build:umd": "wp",
    "jest:watch": "jest --watch",
    "jest:debug": "node --debug-brk --inspect ./node_modules/.bin/jest -i",
    "test-once": "npm run jest",
    "test": "jest",
    "clean": "rimraf ./dist ./lib ./esm",
    "build-and-test": "npm run clean && npm run build && npm run test-once",
    "lint": "eslint src/ test/",
    "prepare": "npm run build-and-test",
    "prepublish": "npm run lint && npm run build-and-test",
    "prettier:write": "prettier --write ./{src,test}/*.js ./{src,test}/**/*.js"
  },
  "files": [
    "dist",
    "lib",
    "esm"
  ],
  "keywords": [
    "draft",
    "draftjs",
    "draft-convert",
    "convert"
  ],
  "license": "Apache-2.0",
  "peerDependencies": {
    "draft-js": ">=0.11.0",
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.18.0",
    "immutable": "~4.1.0",
    "invariant": "^2.2.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.0",
    "@babel/plugin-transform-runtime": "^7.18.0",
    "@babel/preset-env": "^7.18.0",
    "@babel/preset-react": "^7.17.12",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^28.1.0",
    "babel-loader": "^8.2.5",
    "cross-env": "^7.0.3",
    "draft-js": "^0.11.7",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "prettier": "^2.6.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "rimraf": "3.0.2",
    "webpack": "^5.72.1",
    "webpack-nano": "^1.1.1"
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom",
    "testRegex": "/test/spec/.*\\.js$",
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ]
  }
}
